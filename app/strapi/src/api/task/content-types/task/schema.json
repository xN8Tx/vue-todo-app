{
  "kind": "collectionType",
  "collectionName": "tasks",
  "info": {
    "singularName": "task",
    "pluralName": "tasks",
    "displayName": "Task"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": false,
      "maxLength": 150
    },
    "completedAt": {
      "type": "datetime"
    },
    "isCompleted": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "list": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::list.list",
      "inversedBy": "tasks"
    }
  }
}
